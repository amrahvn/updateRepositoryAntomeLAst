@model Order
<form method="post" id="Payment">
    <h3>Billing Details</h3>
    <div class="row">
        <div class="col-lg-6 mb-20">
            <label asp-for="Name">
                First Name
                <span>*</span>
            </label>
            <input asp-for="Name">
        </div>
        <div class="col-lg-6 mb-20">
            <label asp-for="Surnama">
                Last Name
                <span>*</span>
            </label>
            <input asp-for="Surnama">
        </div>
        <div class="col-12 mb-20">
            <label asp-for="CompanyName">Company Name</label>
            <input asp-for="CompanyName">
        </div>
        <div class="col-12 mb-20">
            <label asp-for="County">County Name2</label>
            <input asp-for="County">
        </div>
