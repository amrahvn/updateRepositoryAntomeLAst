@model Brand
@{
    ViewData["Title"] = "Create";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4" style="
                                                                        position: absolute;
                                                                        right: 72px;
                                                                        top: 6rem;
                                                                    ">
    <h3>Brand Create</h3>
</div>

<div class="row align-items-center">
    <div class="container">
        <div class="createform" style="
                                        margin-left: 170px;
                                        margin-top: 14rem;
                                        background-color: white;
                                        border-radius: 12px;
                                        margin-bottom: 10rem;
                                    ">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name" style="margin-left:20px">Brand Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary " style="margin-left:12px;margin-bottom:12px;width:140px">Submit</button>
            <br />

                <a asp-area="manage" asp-controller="Brand" asp-action="Index" class="btn btn-primary" style="
                                                                                                                margin-left: 11px;
                                                                                                                width: 145px;
                                                                                                                margin-bottom: 6px;
                                                                                                            ">Go Back</a>
        </form>
        </div>
    </div>
</div>