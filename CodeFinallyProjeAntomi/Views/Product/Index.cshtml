<script>
    function setSelectedCriteria(criteria) {
        localStorage.setItem("sortingCriteria", criteria);
    }

    document.querySelectorAll(".list li").forEach(function (option) {
        option.addEventListener("click", function () {
            var selectedCriteria = this.dataset.value;
            setSelectedCriteria(selectedCriteria);

            document.getElementById("selectedOptionText").textContent = this.textContent;

            window.location.href = "@Url.Action("Index")" + "?sortingCriteria=" + selectedCriteria;
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        var savedCriteria = localStorage.getItem("sortingCriteria");
        if (savedCriteria) {
            document.getElementById("selectedOptionText").textContent = document.querySelector(".list li[data-value='" + savedCriteria + "']").textContent;
        }
    });
</script>