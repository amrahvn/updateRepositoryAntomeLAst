        <div class="col-12 mb-20">
            <label asp-for="PostalCode">
                 Postal/Code
                <span>*</span>
            </label>
            <input asp-for="PostalCode">
        </div>
        <div class="col-lg-6 mb-20">
            <label asp-for="Phone">
                Phone
                <span>*</span>
            </label>
            <input asp-for="Phone">
        </div>
        <div class="col-lg-6 mb-20">
            <label asp-for="Email">
                Email Address
                <span>*</span>
            </label>
            <input asp-for="Email">
        </div>
        <div class="col-12">
            <div class="order-notes">
                <label @*for="order_note"*@ asp-for="OrderNotes">Order Notes</label>
