        <div class="col-12 mb-20">
            <label asp-for="Street">
                Street address
                <span>*</span>
            </label>
            <input placeholder="House number and street name" asp-for="Street">
        </div>
        <div class="col-12 mb-20">
            <input placeholder="Apartment, suite, unit etc. (optional)" asp-for="Street2" >
        </div>
        <div class="col-12 mb-20">
            <label asp-for="Town">
                Town / City
                <span>*</span>
            </label>
            <input asp-for="Town">
        </div>
        <div class="col-12 mb-20">
            <label asp-for="State">
                State / County
                <span>*</span>
            </label>
            <input asp-for="State">
