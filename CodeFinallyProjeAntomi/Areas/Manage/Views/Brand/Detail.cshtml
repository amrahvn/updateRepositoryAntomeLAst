@model Brand
@{
    ViewData["Title"] = "Detail";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4" style="
                                                                        position: absolute;
                                                                        right: 72px;
                                                                        top: 6rem;
                                                                    ">
    <h3>Brand Detail</h3>
</div>

<div class="row">
    <div class="container">
        <div class="card" style="width: 18rem;margin-left: 271px;margin-top: 12rem;margin-bottom:40px">
            <div class="card-body">
                <h5 class="card-title">Model name: @Model.Name</h5>
            </div>
        </div>
        @if(Model.products !=null && Model.products.Count() > 0)
        {

            <table class="table table-striped table-dark" style="
    margin-left: 138px;
    margin-top: 8rem;
">

                <thead>

                    <tr>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.products)
                    {
                        <tr>

                            <td>Name: @product.Title</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <div style="margin-left: 137px;">
            <a asp-area="manage" asp-controller="Brand" asp-action="Index" class="btn btn-primary">Go Back</a>
        </div>
    </div>
</div>