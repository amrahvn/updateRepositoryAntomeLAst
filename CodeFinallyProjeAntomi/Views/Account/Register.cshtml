@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/Assets/css/bootstrap.css">
    <link rel="stylesheet" href="~/Assets/css/reset.css">
    <link rel="stylesheet" href="~/Assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tippy.js@6.3.1/dist/tippy.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>


<!--Bread-crubs area Part Start-->
<div class="breadcrumbs_area">
    <div class="containerr">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li>
                            <a >Home</a>
                        </li>
                        <li><i class="fa-solid fa-chevron-down fa-rotate-270"></i></li>
                        <li>Register Amrah</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Bread-crubs area Part Start-->
<!--REgister common start-->
<div class="login_page_bg">
    <div class="containerr">
        <div class="account_form register">
            <h2>Register</h2>
            <div class="text-danger" asp-validation-summary="ModelOnly">
            </div>
            <form action="#" method="post">
                    <p>
                        <label asp-for="Name">Name<span>*</span></label>
                        <br>
                        <input asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </p>
                    <p>
                        <label asp-for="Surname">Surname<span>*</span></label>
                        <br>
                        <input asp-for="Surname">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </p>
                <p>
                    <label asp-for="Email">Email<span>*</span></label>
                    <br>
                    <input asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </p>
                <p>
                    <label asp-for="UserName">User Name<span>*</span></label>
                    <br>
                    <input asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </p>
                <p>
                    <label asp-for="Password">Password <span>*</span></label>
                    <br>
                    <input asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </p>
                <p>
                    <label asp-for="ConfiremPassword">Confirem Password<span>*</span></label>
                    <br>
                    <input asp-for="ConfiremPassword">
                    <span asp-validation-for="ConfiremPassword" class="text-danger"></span>
                </p>
                <div class="login_submit">
                    <button type="submit" asp-action="Register" asp-controller="Account">Register</button>
                    <button type="submit">Forgot password</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Register Common End-->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="slick/slick.min.js"></script>
    <script src="glider.js"></script>

    <script src="~/Assets/Js/app.js"></script>
   <script src="/Assets/Js/shop.js"></script>
    <script src="/Assets/Js/about.js"></script>
</body>
</html>  