@model ContactUs
@{
    ViewData["Title"] = "Message";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4" style="
                                                                        position: absolute;
                                                                        right: 72px;
                                                                        top: 6rem;
                                                                    ">
    <h3>Message</h3>
</div>

<div class="row">
    <div class="container">
        <div class="card" style="width: 18rem;margin-left: 271px;margin-top: 12rem;margin-bottom:40px">
            <div class="card-body">
                <h5 class="card-title">User Name: @Model.Name</h5>
            </div>
        </div>
       

            <table class="table table-striped table-dark" style="
    margin-left: 138px;
    margin-top: 8rem;
">

                <thead>

                    <tr>
                        <th scope="col">Message</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>

                            <td>@Model.Message</td>
                        </tr>
                    
                </tbody>
            </table>
        
        <div style="margin-left: 137px;">
            <a asp-area="manage" asp-controller="Contact" asp-action="Index" class="btn btn-primary">Go Back</a>
        </div>
    </div>
</div>

